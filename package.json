{
  "name": "lesta",
  "version": "",
  "description": "A native JavaScript framework for building UI on the web.",
  "keywords": [
    "lesta",
    "lesta.js",
    "lestajs"
  ],
  "files": [
    "dist/lesta.esm.js",
    "dist/lesta.global.js",
    "dist/lesta.global.prod.js",
    "dist/lesta.widget.global.js",
    "dist/lesta.widget.global.prod.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lestajs/core.git"
  },
  "bugs": {
    "url": "https://github.com/lestajs/core/issues"
  },
  "main": "dist/lesta.esm.js",
  "module": "dist/lesta.esm.js",
  "exports": {
    ".": {
      "import": "./dist/lesta.esm.js",
      "require": "./dist/lesta.cjs.js"
    }
  },
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global",
      "source": "formGenerator/index.js"
    }
  },
  "scripts": {
    "build": "node scripts/build.js --define:process.env.NODE_ENV='production'",
    "lint:file": "eslint",
    "lint": "eslint . --ext .js",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check",
    "test": "cypress run",
    "prepare": "husky"
  },
  "alias": {
    "lesta": "scripts/lesta.js"
  },
  "author": "Sasha Kosyak",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.23.0",
    "@typescript-eslint/parser": "^8.28.0",
    "cypress": "^7.0.0",
    "esbuild": "~0.16.17",
    "eslint": "^9.23.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-tsc": "^2.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "typescript": "^5.8.2",
    "zlib": "^1.0.5"
  },
  "type": "module"
}
